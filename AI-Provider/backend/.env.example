# Database Configuration
DB_HOST=localhost
DB_PORT=1433
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_DRIVER=ODBC Driver 18 for SQL Server

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-coder:30b
LLM_TEMPERATURE=0.1
LLM_NUM_PREDICT=2048
LLM_TOP_K=10
LLM_TOP_P=0.9

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security
READ_ONLY_MODE=True
QUERY_TIMEOUT=30
MAX_ROWS_RETURNED=1000

# Vector/RAG Configuration
VECTOR_STORE_BACKEND=faiss   # faiss | chroma
VECTOR_DB_PATH=./vector_db   # used only for chroma
FAISS_INDEX_PATH=./faiss_index
FAISS_INDEX_TYPE=flat        # flat | ivf
FAISS_NLIST=100              # only for ivf
EMBEDDING_MODEL=intfloat/multilingual-e5-large
TOP_K_TABLES=10

# Query Examples RAG Configuration (for text-to-sql service)
QUERY_EXAMPLES_DB=./faiss_examples
QUERY_EXAMPLES_MODEL=intfloat/multilingual-e5-large
QUERY_EXAMPLES_TOP_K=3

# Logging
LOG_LEVEL=INFO
LOG_SQL_QUERIES=True
