# Development Dockerfile for Concord AI
# Supports hot-reloading for rapid development
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for MSSQL
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    unixodbc-dev \
    unixodbc \
    && rm -rf /var/lib/apt/lists/*

# Install Microsoft ODBC Driver for SQL Server (modern GPG key method)
RUN curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /usr/share/keyrings/microsoft-prod.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/mssql-release.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y msodbcsql18 \
    && rm -rf /var/lib/apt/lists/*

# Copy only requirements first (for better caching)
COPY requirements.txt .

# Install Python dependencies including watchfiles for hot-reload
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir watchfiles

# Create necessary directories
RUN mkdir -p logs

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Source code will be mounted as volume for hot-reload
# Don't copy source here - mount it instead

# Expose all service ports
EXPOSE 8000 8001 3000
